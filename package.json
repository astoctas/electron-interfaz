{
  "name": "interfaz-link",
  "version": "1.0.2",
  "description": "An interfaz link Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "pack-win": "build --dir --win --ia32",
    "dist-win": "build --win --ia32",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "ar.com.interfazrobotica",
    "productName": "Interfaz Link",
    "files": [
      "**/*",
      "resources/",
      "build/interfaz.png"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:astoctas/electron-interfaz.git"
  },
  "keywords": [
    "Interfaz",
    "Robotica"
  ],
  "author": "astoctas",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-builder": "^20.43.0",
    "electron-packager": "^13.1.1",
    "electron-rebuild": "^1.8.8"
  },
  "dependencies": {
    "color-string": "^1.5.3",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "data-table": "^2.0.0",
    "electron-reload": "^1.4.0",
    "express": "^4.17.1",
    "firmata": "^2.0.0",
    "fs": "0.0.1-security",
    "http": "0.0.0",
    "johnny-five": "^1.1.0",
    "jquery": "^3.4.1",
    "materialize-css": "^1.0.0",
    "oled-font-5x7": "^1.0.3",
    "oled-js": "^5.0.0",
    "path": "^0.12.7",
    "png-to-lcd": "^1.0.3",
    "serialport": "^7.1.5",
    "socket.io": "^2.2.0"
  }
}
